#!/bin/bash

if [ "$#" -ne 3 ]
then
    echo "первым аргументом должен передаваться путь к csv файлу"
    echo "вторым аргументом должен передаваться путь к файлу для чтения модели"
    echo "вторым аргументом должен передаваться путь к файлу для записи predictions"
    exit 1
fi

bash -c "python ../src/predict.py $1 $2 $3"